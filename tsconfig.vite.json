{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client"]
  },
  "include": [
    "vite.generated.ts",
    "vite.config.ts"
  ]
} 